<table id="answer_<%= answer.id %>">
  <tr>
    <td class="vote">
      <%= link_to "#" do %>
        <i class="material-icons" %>add</i>
      <% end %>
      <div class="vote-point">+<%= answer.vote_count %></div>
      <%= link_to "#" do %>
        <i class="material-icons" %>remove</i>
      <% end %>
    </td>
    <td class="collection">
      <div class="collection-item avatar">
        <%= image_tag "yuna.jpg", class: "circle" %>
        <span class="title"><%= answer.user.username %></span><br>
        <span><%= t "fake.point" %></span>
        <span class="medal">
          <%= image_tag "gold-medal.png", alt: "medal" %>
        </span>
        <div class="content_answer">
          <p>
            <%= answer.content %>
          </p>
          <div class="btn-add-comment">
            <span><%= t "button.add_comment" %></span>
          </div>
          <% if current_user %>
            <div class="add-comment">
              <%= form_for [@question,@answer], remote: true do |f| %>
                <%= f.hidden_field :user_id, value: current_user.id %>
                <%= f.hidden_field :parent_id, value: answer.id %>
                <%= f.text_area :content %>
                <%= f.submit "submit" %>
              <% end %>
            </div>
          <% end %>
          <div class="container-comments">
            <% if answer.children.count > 0 %>
              <% answer.children.each do |comment| %>
                <%= render "answers/comment", comment: comment %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="secondary-content">
          <span><%= time_ago_in_words answer.created_at %></span>
        </div>
      </div>
    </td>
  </tr>
</table>
