<ul id="dropdown1" class="dropdown-content">
  <li><%= link_to t("link.profile"), "#" %></li>
  <li><%= link_to t("link.sign_out"), destroy_user_session_path, method: :delete %></li>
</ul>
<nav class="header">
  <div class="nav-wrapper row">
    <div class="col m2">
      <%= link_to t("text.logo"),root_path, class: "brand-logo" %>
    </div>
    <div class="col m6">
      <form>
        <div class="input-field">
          <input id="search" type="search" required>
          <label class="label-icon" for="search">
            <i class="material-icons"><%= t "search" %></i>
          </label>
          <i class="material-icons"><%= t "close" %></i>
        </div>
      </form>
    </div>
    <ul class="right hide-on-med-and-down col m4">
      <li>
        <%= link_to t("button.create"),new_question_path, class: "waves-effect
          waves-light btn create_question" ,"data-turbolinks": false %>
      </li>
      <% if current_user %>
      <li class="avatar">
        <a class="dropdown-button" href="#" data-activates="dropdown1">
          <%= current_user.username %>
        </a>
      </li>
      <% else %>
      <li>
        <%= link_to t("link.login"), new_user_session_path, method: :get %>
      </li>
      <% end %>
    </ul>
  </div>
</nav>
