<table>
  <tr>
    <td class="vote">
      <%= link_to "#" do %>
        <i class="material-icons" >add</i>
      <% end %>
      <div class="vote-point">+<%= @question.vote_count %></div>
      <%= link_to "#" do %>
        <i class="material-icons" >remove</i>
      <% end %>
    </td>
    <td class="collection">
      <div class="collection-item avatar">
        <%= image_tag "yuna.jpg", class: "circle" %>
        <span class="title"><%= @question.user.username %></span><br>
        <span><%= t "fake.point" %></span>
        <span class="medal">
          <%= image_tag "gold-medal.png", alt: "medal" %>
        </span>
        <div class="content_question">
          <p>
            <%= raw @question.content %>
          </p>
        </div>
        <div class="secondary-content">
          <span><%= time_ago_in_words @question.created_at %></span>
        </div>

        <table class="question-footer">
          <tr>
            <td class="btn-add-answer">
              <span><%= t "button.add_answer" %></span>
            </td>
            <% if current_user %>
              <td class="add-answer">
                <%= form_for [@question,@answer], remote: true do |f| %>
                  <%= f.hidden_field :user_id, value: current_user.id %>
                  <%= f.text_area :content %>
                  <%= f.submit "submit" %>
                <% end %>
              </td>
            <% end %>
            <td class="report">
              <%= link_to "#" do %>
                <i class="material-icons">flag</i>
                <span><%= t "report" %></span>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
    </td>
  </tr>
</table>
