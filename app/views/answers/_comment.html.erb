<table>
  <tr>
    <td class="collection">
      <div class="collection-item avatar">
        <%= image_tag "yuna.jpg", class: "circle" %>
        <span class="title"><%= comment.user.username %></span><br>
        <span><%= t "fake.point" %></span>
        <span class="medal">
          <%= image_tag "gold-medal.png", alt: "medal" %>
        </span>
        <div class="content_answer">
          <p>
            <%= comment.content %>
          </p>
        </div>
        <div class="secondary-content">
          <span><%= time_ago_in_words comment.created_at %></span>
        </div>
      </div>
    </td>
  </tr>
</table>
